{
  "name": "hustle-castle-forum",
  "version": "1.0.0",
  "description": "Un forum completo e modulare per la community di Hustle Castle",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000 --open=/index.html",
    "build": "npm run optimize && npm run minify",
    "optimize": "node scripts/optimize-assets.js",
    "minify": "node scripts/minify-files.js",
    "deploy": "npm run build && firebase deploy",
    "deploy-hosting": "firebase deploy --only hosting",
    "deploy-database": "firebase deploy --only database",
    "setup": "node scripts/setup.js",
    "test": "npm run test-modules && npm run test-integration",
    "test-modules": "node scripts/test-modules.js",
    "test-integration": "playwright test",
    "lint": "eslint modules/ --fix",
    "format": "prettier --write \"**/*.{js,html,css,md}\"",
    "validate-config": "node scripts/validate-config.js",
    "backup-data": "node scripts/backup-data.js",
    "generate-docs": "jsdoc modules/ -d docs/",
    "analyze-bundle": "node scripts/analyze-bundle.js",
    "check-updates": "npm-check-updates",
    "security-audit": "npm audit",
    "firebase-init": "firebase init",
    "firebase-login": "firebase login",
    "firebase-emulator": "firebase emulators:start",
    "create-component": "node scripts/create-component.js",
    "extract-translations": "node scripts/extract-i18n.js"
  },
  "keywords": [
    "forum",
    "hustle-castle",
    "gaming",
    "community",
    "firebase",
    "realtime",
    "chat",
    "modular",
    "javascript",
    "responsive"
  ],
  "author": {
    "name": "Hustle Castle Forum Team",
    "email": "dev@hustlecastleforum.com",
    "url": "https://github.com/hustlecastle-forum"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hustlecastle-forum/hustle-castle-forum.git"
  },
  "bugs": {
    "url": "https://github.com/hustlecastle-forum/hustle-castle-forum/issues"
  },
  "homepage": "https://hustlecastleforum.com",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "eslint": "^8.50.0",
    "firebase-tools": "^12.7.0",
    "jsdoc": "^4.0.2",
    "live-server": "^1.2.2",
    "npm-check-updates": "^16.14.0",
    "prettier": "^3.0.3",
    "terser": "^5.24.0",
    "cssnano": "^6.0.1",
    "html-minifier-terser": "^7.2.0",
    "imagemin": "^8.0.1",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-mozjpeg": "^10.0.0"
  },
  "optionalDependencies": {
    "sharp": "^0.32.6"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "globals": {
      "firebase": "readonly",
      "console": "readonly"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 4
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run format",
      "pre-push": "npm run test"
    }
  },
  "config": {
    "firebase": {
      "project": "hustle-castle-forum",
      "database": "europe-west1"
    },
    "build": {
      "outputDir": "dist",
      "publicPath": "/",
      "optimizeImages": true,
      "generateSourceMaps": false
    },
    "dev": {
      "port": 3000,
      "host": "localhost",
      "livereload": true
    }
  },
  "files": [
    "index.html",
    "style.css",
    "modules/",
    "assets/",
    "firebase.json",
    "README.md"
  ],
  "directories": {
    "lib": "modules",
    "doc": "docs",
    "test": "tests"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/hustlecastle-forum"
  },
  "volta": {
    "node": "18.18.0",
    "npm": "9.8.1"
  },
  "size-limit": [
    {
      "path": "modules/*.js",
      "limit": "100 KB"
    },
    {
      "path": "style.css",
      "limit": "50 KB"
    }
  ],
  "dependabot": {
    "version": 2,
    "updates": [
      {
        "package-ecosystem": "npm",
        "directory": "/",
        "schedule": {
          "interval": "weekly"
        }
      }
    ]
  },
  "release": {
    "branches": [
      "main",
      "next"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  }
}